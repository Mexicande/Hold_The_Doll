<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_marginLeft="16dp"
            android:id="@+id/layout_top_back"
            android:layout_width="23dp"
            android:layout_height="23dp"
            android:onClick="goBack"
            android:layout_centerVertical="true"
            android:src="@mipmap/player_back"/>
        <ImageView
            android:layout_width="131dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:src="@drawable/index_top"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:background="@drawable/user_center_bg">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_height="28dp">
            <com.deerlive.zhuawawa.view.supertextview.SuperButton
                android:id="@+id/bt_invite"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="25dp"
                app:sCornersRadius="5dp"
                android:paddingRight="7dp"
                android:paddingLeft="7dp"
                app:sSolidColor="@color/green_text"
                android:textSize="13sp"
                android:textColor="#FEFEFE"
                android:layout_gravity="center_horizontal"
                android:text="邀请好友"
                />
            <com.deerlive.zhuawawa.view.supertextview.SuperButton
                android:id="@+id/bt_edit"
                android:layout_width="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_height="25dp"
                app:sCornersRadius="5dp"
                android:layout_marginLeft="10dp"
                android:drawableLeft="@mipmap/iv_edit"
                android:paddingRight="7dp"
                app:sSolidColor="@color/green_text"
                android:textSize="13sp"
                android:textColor="#FEFEFE"
                android:layout_gravity="center_horizontal"
                android:text="编辑"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:id="@+id/user_avator"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="10dp"
                android:src="@mipmap/logo"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵称"
                    android:textStyle="bold"
                    android:textColor="@color/text_color"
                    android:textSize="16sp"/>
                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginTop="2dp"
                    android:textColor="@color/color_shouhuo_text"
                    android:textSize="12sp"/>

               <!-- <TextView
                    android:id="@+id/user_signature"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户签名，我的精致只为自己"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="@color/color_shouhuo_text"
                    android:textSize="12sp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/user_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="粉丝: 260"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/color_shouhuo_text"
                        android:textSize="12sp"/>
                    <TextView
                        android:layout_marginLeft="20dp"
                        android:id="@+id/user_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关注: 260"
                        android:layout_marginTop="2dp"
                        android:textColor="@color/color_shouhuo_text"
                        android:textSize="12sp"/>
                </LinearLayout>-->
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_below="@id/layout_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/user_coin"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="90dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/user_coin_bg"
                    android:onClick="goCharge">
                    <com.deerlive.zhuawawa.view.StrokeTextView
                        android:id="@+id/user_balance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="0"
                        android:textSize="11sp"
                        app:innnerColor="@android:color/white"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/user_zhua_num"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="85dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="5dp"
                    android:onClick="goWaWa"
                    android:background="@drawable/user_zhuazhu_bg">
                    <com.deerlive.zhuawawa.view.StrokeTextView
                        android:id="@+id/user_wqnum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:text="0"
                        android:textSize="11sp"
                        android:gravity="center"
                        app:innnerColor="@android:color/white"/>
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:onClick="onCustomer">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/iv_service"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:text="@string/customer_service"
                android:textColor="@color/center_black"
                android:textSize="12sp"
                android:id="@+id/tv_service" />
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_arrow"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/user_center_lion"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:onClick="mesgLogin">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/iv_other_login"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:id="@+id/tv_otherLogin"
                android:text="@string/other_login"
                android:textColor="@color/center_black"
                android:textSize="12sp"
                />
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_arrow"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/user_center_lion"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:onClick="mesgList">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user_info"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:text="@string/message"
                android:textColor="@color/center_black"
                android:textSize="12sp"
                android:id="@+id/textView" />
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_arrow"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/user_center_lion"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:onClick="shouHuo">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user_shouhuo"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:text="@string/shouhuo"
                android:textColor="@color/center_black"
                android:textSize="12sp"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_arrow"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/user_center_lion"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:onClick="zhuaRecord">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user_record_zhua"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:text="@string/zhuaqu_record"
                android:textColor="@color/center_black"
                android:textSize="12sp"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_arrow"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/user_center_lion"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:onClick="coinRecord">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/user_record_coin"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_weight="1"
                android:text="@string/jinbi_record"
                android:textColor="@color/center_black"
                android:textSize="12sp"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_arrow"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/divider"
            android:background="@color/user_center_lion"/>
    </LinearLayout>





</LinearLayout>
