<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deerlive.zhuawawa.activity.FillInformation">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="20dp"
            android:src="@mipmap/iv_left_arrow"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/text_color"
            android:text="@string/fillinfor_title"/>
    </android.support.v7.widget.Toolbar>
    <EditText
        android:id="@+id/et_userPhone"
        android:inputType="phone"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@null"
        android:hint="请输入手机号码"
        android:maxLength="11"
        android:textSize="16sp"
        android:textColorHint="@color/editext_hintcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <View
        android:layout_below="@id/et_userPhone"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:background="@color/edtext_bg"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_height="0.8dp"/>
    <com.deerlive.zhuawawa.view.supertextview.SuperButton
        android:id="@+id/bt_binding"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:enabled="false"
        android:text="绑定"
        android:textSize="18sp"
        android:textColor="@color/white"
        app:sCornersRadius="0dp"
        app:sSelectorDisableColor="#E3E7E4"
        app:sSelectorNormalColor="#E3E7E4"
        app:sSelectorPressedColor="@color/shape2"
        app:sUseSelector="true" />
</RelativeLayout>
