<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_danmu_container"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/shallow_red"
    app:cardCornerRadius="6dp"
    app:cardElevation="1dp"
    app:contentPadding="15dp">
    <RelativeLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/iv_logo"
            android:layout_centerVertical="true"
            android:id="@+id/zq_avator"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/zq_avator">
            <TextView
                android:id="@+id/zq_name"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:text=""
                android:textColor="#0B2F15"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/zq_time"
                android:layout_width="wrap_content"
                android:textSize="11sp"
                android:layout_marginTop="3dp"
                android:text=""
                android:textColor="@color/shape2"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:gravity="center">
            <ImageView
                android:id="@+id/video_record"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/record_video"/>
            <TextView
                android:id="@+id/zq_result"
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:text=""
                android:layout_centerVertical="true"
                android:textColor="@color/shape3"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>