<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context="com.deerlive.zhuawawa.activity.WelcomeLoginActivity">
    <ImageView
        android:id="@+id/iv_login_top"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        android:src="@drawable/login_top"/>
    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.deerlive.zhuawawa.view.supertextview.SuperButton
            android:id="@+id/bt_Login"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginTop="20dp"
            app:sSolidColor="@color/white"
            app:sCornersRadius="30dp"
            android:paddingLeft="25dp"
            android:textSize="18sp"
            android:paddingRight="25dp"
            android:textColor="#07B02B"
            android:layout_gravity="center_horizontal"
            android:text="快抓娃娃"
            />
        <RelativeLayout
            android:id="@+id/layout_unLogin"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.deerlive.zhuawawa.view.supertextview.SuperButton
                android:id="@+id/bt_unLogin"
                android:layout_marginBottom="20dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_height="28dp"
                app:sCornersRadius="30dp"
                android:paddingRight="12dp"
                android:paddingLeft="12dp"
                app:sSolidColor="@color/shape3"
                android:textSize="13sp"
                android:textColor="#FEFEFE"
                android:layout_gravity="center_horizontal"
                android:text="稍后再说"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
